{
  "name": "2048-cicd-enterprise-tests",
  "version": "1.0.0",
  "description": "Test suite for 2048 CI/CD Enterprise platform",
  "private": true,
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:a11y": "playwright test tests/e2e/accessibility.test.js",
    "test:visual": "playwright test tests/e2e/visual-regression.test.js",
    "test:smoke": "playwright test tests/smoke/",
    "test:docker": "bash tests/docker/run-all-tests.sh",
    "test:load": "k6 run tests/load/k6-load-test.js",
    "test:load:smoke": "k6 run tests/load/k6-smoke-test.js",
    "test:lighthouse": "node tests/performance/lighthouse-ci.js",
    "test:security": "bash tests/security/penetration-tests.sh",
    "test:chaos": "playwright test tests/chaos/",
    "test:chaos:resilience": "playwright test tests/chaos/container-resilience.test.js",
    "test:integration": "bash tests/integration/run-integration-tests.sh",
    "test:integration:parallel": "PARALLEL=true bash tests/integration/run-integration-tests.sh",
    "test:all": "npm run test:docker && npm run test:e2e",
    "test:all:comprehensive": "bash tests/integration/run-integration-tests.sh",
    "test:coverage": "playwright test --reporter=html --reporter=json",
    "test:coverage:unit": "nyc --reporter=html --reporter=text npm run test:unit",
    "test:ci": "npm run test:docker && npm run test:e2e && npm run test:security"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "chrome-launcher": "^1.1.0",
    "lighthouse": "^11.4.0",
    "nyc": "^15.1.0"
  },
  "keywords": [
    "testing",
    "e2e",
    "docker",
    "ci-cd",
    "playwright"
  ],
  "author": "",
  "license": "MIT"
}
