{
  "name": "2048-cicd-enterprise-tests",
  "version": "1.0.0",
  "description": "Test suite for 2048 CI/CD Enterprise platform",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:unit:watch": "jest tests/unit --watch",
    "test:unit:coverage": "jest tests/unit --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:a11y": "playwright test tests/e2e/accessibility.test.js",
    "test:visual": "playwright test tests/e2e/visual-regression.test.js",
    "test:smoke": "playwright test tests/smoke/",
    "test:docker": "bash tests/docker/run-all-tests.sh",
    "test:load": "k6 run tests/load/k6-load-test.js",
    "test:lighthouse": "node tests/performance/lighthouse-ci.js",
    "test:security": "bash tests/security/penetration-tests.sh",
    "test:integration": "jest tests/integration",
    "test:all": "npm run test:unit && npm run test:docker && npm run test:e2e",
    "test:coverage": "jest --coverage && playwright test --reporter=html --reporter=json",
    "test:coverage:unit": "jest --coverage --coverageDirectory=./coverage/unit",
    "test:coverage:report": "nyc report --reporter=html --reporter=lcov"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@aws-sdk/client-ecr": "^3.540.0",
    "@aws-sdk/client-ecs": "^3.540.0",
    "@aws-sdk/client-elastic-load-balancing-v2": "^3.540.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.540.0",
    "@aws-sdk/client-iam": "^3.540.0",
    "chrome-launcher": "^1.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lighthouse": "^11.4.0",
    "nyc": "^15.1.0"
  },
  "keywords": [
    "testing",
    "e2e",
    "docker",
    "ci-cd",
    "playwright"
  ],
  "author": "",
  "license": "MIT"
}
