# Autonomous Code Review Agent - Environment Variables

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/code_review
POSTGRES_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Model APIs
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Datadog Monitoring
DD_API_KEY=your_datadog_api_key_here
DD_AGENT_HOST=localhost
DD_DOGSTATSD_PORT=8125
DD_SITE=datadoghq.com

# Splunk Integration
SPLUNK_HEC_URL=https://your-splunk.com:8088
SPLUNK_HEC_TOKEN=your_hec_token_here

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn-here

# Security Scanning
SNYK_API_TOKEN=your_snyk_token_here
SEMGREP_APP_TOKEN=your_semgrep_token_here

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
WORKERS=4

# Rate Limiting
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_REPO=100

# Model Configuration
DEFAULT_MODEL=gpt-4
FALLBACK_MODEL=claude-3-5-sonnet-20241022
MAX_TOKENS=8000
TEMPERATURE=0.2

# Feature Flags
ENABLE_SECURITY_SCAN=true
ENABLE_PERFORMANCE_ANALYSIS=true
ENABLE_AUTO_POST_REVIEWS=true
ENABLE_LEARNING_LOOP=true

# Monitoring
ENABLE_DATADOG=true
ENABLE_SPLUNK=true
ENABLE_PROMETHEUS=true

# Grafana
GRAFANA_PASSWORD=admin
