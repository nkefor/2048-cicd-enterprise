# Example Terraform Variables for Healthcare DevOps Platform
# Copy this file to terraform.tfvars and update with your values

# Basic Configuration
aws_region  = "us-east-1"
environment = "production"  # dev, staging, or production

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# Domain Configuration
domain_name = "healthcare.example.com"

# Security Configuration
allowed_countries = ["US", "CA"]  # ISO country codes

# Organizational Configuration
cost_center     = "Healthcare-IT"
owner           = "DevOps-Team"
organization_id = ""  # Leave empty if not using AWS Organizations
allowed_regions = ["us-east-1", "us-west-2"]

# HIPAA Compliance
enable_hipaa_compliance        = true
audit_log_retention_days       = 2190  # 6 years
encryption_key_rotation_enabled = true
mfa_required                   = true

# Alert Configuration
security_alert_email     = "security@example.com"
compliance_alert_email   = "compliance@example.com"
operational_alert_email  = "ops@example.com"

# Lambda Configuration
lambda_runtime     = "python3.11"
lambda_timeout     = 30
lambda_memory_size = 512

# DynamoDB Configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"  # or "PROVISIONED"

# Feature Flags
enable_step_functions      = true
enable_comprehend_medical  = true
enable_verified_access     = true

# Verified Access Configuration
verified_access_trust_provider = "okta"  # okta, azure-ad, or jamf

# Backup Configuration
backup_retention_days      = 35
enable_cross_region_backup = true
backup_region              = "us-west-2"
