# Environment Configuration Template
# Copy to .env and customize for your environment
# Updated: 2025-11-19

# Ansible Configuration
ANSIBLE_USER=ubuntu
ANSIBLE_SSH_KEY=~/.ssh/id_rsa
ANSIBLE_INVENTORY=inventory/hosts.yml

# System Configuration
SYSTEM_TIMEZONE=UTC
DNS_SERVERS=8.8.8.8,8.8.4.4,1.1.1.1
NTP_SERVERS=0.ubuntu.pool.ntp.org,1.ubuntu.pool.ntp.org

# Application Configuration
APP_NAME=myapp
APP_VERSION=1.0.0
APP_PORT=8080
APP_LANGUAGE=php
APP_ENVIRONMENT=production

# Database Configuration
DATABASE_TYPE=mysql
MYSQL_ROOT_PASSWORD=root123
MYSQL_USER=app_user
MYSQL_PASSWORD=apppass123
MYSQL_DATABASE=app_db
MYSQL_HOST=db-prod-01

# PostgreSQL Configuration
POSTGRESQL_VERSION=14
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=postgres123
POSTGRESQL_DATABASE=app_db

# Backup Configuration
BACKUP_LOCATION=/var/backups
BACKUP_RETENTION_DAYS=30
BACKUP_REMOTE=false
BACKUP_TO_S3=false
S3_BUCKET=my-backups
AWS_REGION=us-east-1

# AWS Credentials (if backing up to S3)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Monitoring Configuration
MONITORING_ENVIRONMENT=production
ENABLE_PROMETHEUS=false
ENABLE_GRAFANA=false
ENABLE_ALERTMANAGER=false
NODE_EXPORTER_ENABLED=true

# Grafana Configuration
GRAFANA_DOMAIN=localhost
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Alert Configuration
ALERT_EMAIL=admin@example.com
ALERT_FROM_EMAIL=alerts@example.com
SMTP_SERVER=localhost:25

# Deployment Configuration
DEPLOYMENT_USER=ubuntu
DEPLOYMENT_GROUP=www-data
ARTIFACT_LOCATION=/var/artifacts
SERIAL_DEPLOYMENT=1

# Security Configuration
ENABLE_FIREWALL=true
ENABLE_FAIL2BAN=true
ENABLE_APPARMOR=false
SSH_PORT=22

# Logging Configuration
LOG_LEVEL=info
SYSLOG_SERVER=
SYSLOG_PORT=514
LOG_RETENTION_DAYS=30

# Performance Configuration
MAX_OPEN_FILES=65536
MAX_PROCESSES=32768
SWAP_SIZE=2G

# Email Notifications
NOTIFY_ON_COMPLETION=false
NOTIFY_EMAIL=admin@example.com

# Cost Tracking Tags
COST_CENTER=infrastructure
PROJECT_NAME=automation
MANAGED_BY=ansible
