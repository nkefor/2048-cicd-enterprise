# Job Automation Tool - Environment Variables
# Copy this file to .env and customize with your actual values

# Personal Information
PERSONAL_NAME="Your Full Name"
PERSONAL_EMAIL="your.email@example.com"
PERSONAL_PHONE="+1-555-123-4567"

# LinkedIn Credentials
LINKEDIN_EMAIL="your.email@example.com"
LINKEDIN_PASSWORD="your_linkedin_password"

# File Paths (use absolute paths)
RESUME_PATH="/absolute/path/to/resume.pdf"
COVER_LETTER_PATH="/absolute/path/to/cover_letter.pdf"

# Job Search Preferences
SALARY_MIN=100000
SALARY_MAX=180000
REMOTE_PREFERENCE="remote_only"  # Options: remote_only, hybrid, onsite, any

# Automation Settings
MAX_APPLICATIONS_PER_RUN=50
DELAY_BETWEEN_APPLICATIONS=30
HEADLESS_BROWSER=false
SAVE_SCREENSHOTS=true

# Email Notifications
SEND_EMAIL_NOTIFICATIONS=false
NOTIFICATION_EMAIL="your.email@example.com"

# Optional: Gmail API for Notifications
GMAIL_CLIENT_ID=""
GMAIL_CLIENT_SECRET=""
GMAIL_REFRESH_TOKEN=""

# Optional: Slack Notifications
SLACK_WEBHOOK_URL=""
SLACK_CHANNEL="#job-applications"

# Optional: AI Services
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Optional: CAPTCHA Solving
ANTICAPTCHA_API_KEY=""
TWOCAPTCHA_API_KEY=""

# Browser Settings
CHROME_DRIVER_PATH="auto"  # Set to "auto" to auto-download
USER_AGENT="auto"  # Set to "auto" for random user agent

# Proxy Settings (Optional)
USE_PROXY=false
PROXY_URL=""
PROXY_USERNAME=""
PROXY_PASSWORD=""

# Logging
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIRECTORY="data/logs"

# Database
DATABASE_PATH="data/applications.db"

# Dashboard
DASHBOARD_PORT=5000
DASHBOARD_HOST="127.0.0.1"

# Development
DEBUG_MODE=false
VERBOSE_LOGGING=false
